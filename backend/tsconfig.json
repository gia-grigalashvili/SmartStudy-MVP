{
  "compilerOptions": {
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@errors/*": ["./src/errors/*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"],
  "files": ["src/types/index.d.ts"]
}
